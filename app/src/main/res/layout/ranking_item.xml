<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:background="@color/transparent"
        >

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_surface"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold"
            android:text=""
            tools:text="1" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_18"
            android:text=""
            tools:text="Piglet" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="36dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_level_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/sp_15"
                android:text="等级："
                tools:text="等级：" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_level_name"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_15"
                android:text=""
                tools:text="666" />


            <TextView
                android:id="@+id/tv_integral_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_level_name"
                android:textStyle="bold"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/sp_15"
                android:text="积分："
                tools:text="积分：" />

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_integral_name"
                android:layout_below="@+id/tv_level"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_15"
                android:text=""
                tools:text="666" />

        </RelativeLayout>



    </LinearLayout>

</layout>
