<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">

        <LinearLayout
            android:id="@+id/aut_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_13"
                android:text=""
                tools:text="作者"/>

            <TextView
                android:id="@+id/base_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:text=""
                tools:text="刘纯贵"/>

        </LinearLayout>

        <TextView
            android:id="@+id/base_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_13"
            android:text=""
            tools:text="一小时前"/>

        <TextView
            android:id="@+id/artile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:maxLines="3"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:singleLine="false"
            android:layout_below="@+id/aut_info"
            android:textColor="@color/text_surface"
            android:textSize="@dimen/sp_15"
            android:text=""
            tools:text="开发开发开发开发开发开发开发"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_10"
            android:includeFontPadding="true"
            android:lineSpacingExtra="0dp"
            android:layout_below="@+id/artile_title"
            android:maxLines="3"
            android:visibility="gone"
            android:textColor="@color/text_second"
            android:textSize="@dimen/sp_13"
            android:text=""
            tools:text="文章说明说明" />

        <TextView
            android:id="@+id/article_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_desc"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_13"
            android:text=""
            tools:text="广场"/>

        <ImageView
            android:id="@+id/zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_desc"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/zan_n"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</layout>